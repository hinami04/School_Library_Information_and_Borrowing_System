CREATE TABLE index (
    SettingID INT AUTO_INCREMENT PRIMARY KEY,
    SiteTitle VARCHAR(50) NOT NULL,
    HeroTitle VARCHAR(100) NOT NULL,
    HeroSubtitle VARCHAR(255) NOT NULL,
    HeroButtonText VARCHAR(50) NOT NULL,
    BackgroundImage VARCHAR(255)
);

