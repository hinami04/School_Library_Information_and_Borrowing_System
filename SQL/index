CREATE TABLE navigation_menu (
    MenuID INT AUTO_INCREMENT PRIMARY KEY,
    Label VARCHAR(50) NOT NULL,
    Link VARCHAR(100) NOT NULL,
    DisplayOrder INT NOT NULL
);

