                    <a href="auth/signup.html" class="nav-button-create login-btn">Create an Account</a>
                <?php else: ?>
                    <!-- Logged in -->
                    <span class="nav-button">Welcome, <?php echo htmlspecialchars($_SESSION['userid']); ?></span>
